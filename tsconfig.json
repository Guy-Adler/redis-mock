{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "lib/*"
      ]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "include": [
    "lib/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}